{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types/",
      "node_modules/truffle-typings/",
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.d.ts",
  ],
  "exclude": [
    "./test/**/*.ts",
    "./src/**/*.spec.ts"
  ]
}